<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/headerAdmin.ejs") %>

<body class="bg-gray-900 text-white font-sans">

    <%- include("../partials/navbarAdmin.ejs") %>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <h1 class="text-center text-3xl font-semibold text-gray-300 mb-8">Structure Image Uploads</h1>

        <!-- Upload Form -->
        <form action="/admin/uploads/structures/upload" method="POST" enctype="multipart/form-data" class="text-center mb-12">
            <input type="file" name="structureImage" accept="image/*" required class="py-2 px-4 bg-gray-700 text-gray-200 border border-gray-600 rounded-lg mb-4">
            <button type="submit" class="py-2 px-6 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-400">
                Upload New Image
            </button>
        </form>

        <!-- Uploaded Images -->
        <h2 class="text-center text-2xl font-semibold text-gray-300 mb-6">Uploaded Images</h2>
        <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% files.forEach(file => { %>
                <li class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    <div class="w-full h-60 overflow-hidden relative bg-gray-700 rounded-lg">
                        <img src="/images/structures/<%= file %>" alt="<%= file %>" class="object-cover w-full h-full rounded-lg">
                    </div>
                    <p class="mt-4 text-center text-sm text-gray-400"><%= file %></p>

                    <!-- Actions: Rename and Delete -->
                    <div class="flex justify-between items-center mt-4 gap-2">
                        <!-- Rename Button (Placeholder for Future Functionality) -->
                        <button class="py-2 px-4 bg-blue-500 text-white rounded-lg text-sm hover:bg-blue-400">
                            Rename
                        </button>

                        <!-- Delete Button (Placeholder for Future Functionality) -->
                        <button class="py-2 px-4 bg-red-500 text-white rounded-lg text-sm hover:bg-red-400">
                            Delete
                        </button>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

    <%- include("../partials/footerAdmin.ejs") %>

</body>
</html>
